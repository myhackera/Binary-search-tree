def findCeil(root, x):
    
    def ceil(root, x):
    
        if root is None:
            return -1
            
        if root.data == x:
            return root.data
            
        if root.data < x:
            return ceil(root.right, x)
            
        ceilValue = ceil(root.left, x)
        return ceilValue if ceilValue >= x else root.data
        
    return ceil(root, x)
